<div class="bg-dark">
  <div class="row">
    <h1 class="display-6 text-white col-6">Project Management App</h1>
    <% if user_signed_in? %>
      <% if current_user.type == "Manager"%>
        <div class="col-2 mt-2">
          <%= button_to "Create Project", new_project_path, method: :get, class: "btn btn-primary" %>
        </div>
      <%end%>
      <div class="col-2 mt-2">
        <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
      </div>
      <div class="col-2 mt-2">
        <%= button_to "Edit Profile", edit_user_registration_path, method: :get, class: "btn btn-success single-line-button" %>
      </div>
    <% end %>
  </div>
</div>
